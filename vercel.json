{
  "version": 2,
  "builds": [
    { "src": "crawler-backend/api/**/*.js", "use": "@vercel/node" },
    { "src": "crawler-frontend/package.json", "use": "@vercel/static-build" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/crawler-backend/api/$1.js" },
    { "src": "/(.*)", "dest": "/crawler-frontend/$1" }
  ]
}
